<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redmannequin.resonance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.redmannequin.resonance.Views.MainMenuView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.redmannequin.resonance.Views.ProjectListView" />
        <activity android:name="com.redmannequin.resonance.Views.TrackListView" />
        <activity android:name="com.redmannequin.resonance.Views.NewTrackView" />
        <activity android:name="com.redmannequin.resonance.Views.RecordTrackView" />
        <activity android:name="com.redmannequin.resonance.Views.TrackView" />
        <activity android:name="com.redmannequin.resonance.Views.NewProjectView"></activity>

    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>