<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_project_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redmannequin.resonance.NewProjectView">

    <TextView
        android:text="Name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/project_text"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/author_text_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/project_name_input"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/project_text" />

    <TextView
        android:text="Author"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:id="@+id/author_text"
        android:layout_below="@+id/project_text"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/author_text_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Author"
        android:ems="10"
        android:id="@+id/author_text_input"
        android:layout_toStartOf="@id/project_name_input"
        android:layout_below="@+id/project_name_input"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/project_text" />

    <Button
        android:text="create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_text_input"
        android:layout_centerHorizontal="true"
        android:id="@+id/project_create_button" />

</RelativeLayout>
